 <!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/ce1160e1b3.js" crossorigin="anonymous"></script>

        {% block stylesheets %}
	    <link rel="stylesheet" href="/assets/admin/base.css">
        <link rel="stylesheet" href="/assets/admin/login.css">
        {% endblock %}

        <title>{% block title %}Connexion{% endblock %}</title>

    </head>
    <body>
        {% block body %}
                <div class='container'>
                    <h1 class='connexion'>Connexion</h1>
                    <div><i class="fas fa-user"></i></div>
                    <form action="{{ path('login') }}" method="post">
                        <div class='field'>
                            <label for="username">Identifiant:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                        </div>
                        <div class='field'>
                            <label for="password">Mot de passe:</label>
                            <input type="password" id="password" name="_password"/>
                        </div>
                        <input type="hidden" name="_target_path" value="/home"/>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class='btnRetour' type="submit">Se connecter</button>
                </div>

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
        {% endblock %}

    </body>

