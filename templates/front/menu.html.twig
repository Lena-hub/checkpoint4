{% extends 'base.html.twig' %}

{% block title %}PizzOnFire{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/front/menu.css">
    <link rel="stylesheet" href="/assets/front/base.css">
{% endblock %}

{% block body %}
<div class="blocks">
    {% for menu in menus|slice(0, 1) %}
    <div class="block1">

        <div class="bockIMGtitre">
            <h2> {{ menu.titre }} </h2>
            <img class="IMGmenu" src="{{ menu.image }}" alt="">
        </div>
        <div class="blockTextes">
            <p> {{ menu.texte }} </p>
            <p> {{ menu.texte2 }} </p>
            <p> {{ menu.prix }} </p>
        </div>
    </div>
    {% endfor %}
